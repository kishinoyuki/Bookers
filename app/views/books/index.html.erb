<h1>Books</h1>
<table>
<tr>
  <thead>
  <th class= "title">Title</th>
  <th class= "body">Body</th>
  </thead>
</tr>
<% @books.each do |book| %>
<tr>
  <tbody>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to 'Show', book_path(book.id), method: :get, style: 'color: black' %></td>
  <td><%= link_to 'Edit', edit_book_path(book.id), method: :get, style: 'color: black' %></td>
  <td><a clas= "detroy"><%= link_to 'Destroy', book_path(book.id), method: :delete, style: 'color: black', "data-confirm" => "Are you sure?" %></a></td>
  </tbody>
</tr>
<% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
<h3>title</h3>
<%= f.text_field :title %>
<h3>body</h3>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>
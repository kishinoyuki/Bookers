<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div class= "error-explanation">
<div class= "error-box">
<p class = "error-title"><%= @book.errors.count %>errors prohibited this book from being saved: </p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  </div>
</div>
<% end %>
<%= form_with model: @book do |f| %>
<% if @book.errors[:title].any? %>
  <div class= "edit-book-title">
    <h3 class= "label-error">title</h3>
    <div class ="text-field-title"><%= f.text_field :title %></div>
  </div>
<% else %>
 <div class= "edit-book-title">
    <h3>title</h3>
    <%= f.text_field :title %>
  </div>
<% end %>
<% if @book.errors[:body].any? %>
  <div class= "edit-book-body">
    <h3 class= "label-error">body</h3>
    <div class ="text-field-body"><%= f.text_field :body %></div>
  </div>
  <% else %>
  <div class= "edit-book-body">
    <h3>body</h3>
    <%= f.text_area :body %>
  </div>
<% end %>
<div class= "edit-button"><%= f.submit 'Update book' %></div>
<% end %>

<%= link_to 'Show', book_path(@book.id), method: :get, style: 'color: black' %>|
<%= link_to 'Back', books_path, method: :get, style: 'color: black' %>